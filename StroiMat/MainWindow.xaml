<Window x:Class="StroiMat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StroiMat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/> 
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#76e383" Orientation="Horizontal">
            <Image Source=".\\Resources\logo.png" Width="50"/>
            <Button x:Name="btnBack" Width="150" Height="30" FontSize="17"
                    Foreground="White" Background="#498c51" Content="Назад" Margin="20 0 0 0" />
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Grid.Row="1">
            <Image Source=".\\Resources\logo.png" Opacity=".1" Width="300"/>
        </StackPanel>
        <Frame x:Name="frmMain" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
