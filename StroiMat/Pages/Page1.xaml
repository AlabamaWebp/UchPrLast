<Page x:Class="StroiMat.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StroiMat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Content="Товары" Style="{StaticResource mainBtn}" Name="btnProduct" Click="btnProduct_Click"/>
                <Button Content="Добавить товар" Style="{StaticResource mainBtn}" Name="btnAddProduct"/>
                <Button Content="Корзина" Style="{StaticResource mainBtn}" Name="btnCart"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
