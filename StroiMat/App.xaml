<Application x:Class="StroiMat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StroiMat"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="mainBtn">
            <Setter Property="Width" Value="200" />
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#76e383" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="TextBlock" x:Key="mainText">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
        </Style>
        <Style TargetType="TextBox" x:Key="mainTextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style TargetType="DockPanel" x:Key="Margin">
            <Setter Property="Margin" Value="0 0 0 10"/>
            <!--<Setter Property="Orientation" Value="Horizontal"/>-->
        </Style>
    </Application.Resources>
</Application>
